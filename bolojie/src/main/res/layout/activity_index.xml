<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.example.admin.bolojie.acvitity.IndexActivity"
    android:id="@+id/rl_index"
    >
    <LinearLayout
        android:id="@+id/ll_title"
        android:layout_width="match_parent"
        android:layout_height="@dimen/title_height"
        android:background="@color/colorWhite"
        android:orientation="horizontal"
        >
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:scaleType="fitCenter"
            android:src="@drawable/ic_rank"
            />
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:textSize="@dimen/title_content_size"
            android:textColor="@color/colorAccent"
            android:text="@string/app_name"
            android:gravity="center"
            android:layout_weight="1"
            />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:scaleType="fitCenter"
            android:src="@drawable/ic_live_list_search"
            />
    </LinearLayout>
    <View
        style="@style/line_style"
        android:layout_below="@+id/ll_title"
        />
    <android.support.design.widget.TabLayout
        android:id="@+id/in_tab"
        android:layout_width="match_parent"
        android:layout_height="@dimen/title_height"
        android:layout_below="@+id/ll_title"
        app:tabTextColor="@color/colorBlack"
        app:tabSelectedTextColor="@color/colorAccent"
        >
    </android.support.design.widget.TabLayout>
    <android.support.v4.view.ViewPager
        android:id="@+id/in_page"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/in_tab"
        >
    </android.support.v4.view.ViewPager>
    <RadioGroup
        android:id="@+id/rg_in"
        android:layout_width="match_parent"
        android:layout_height="@dimen/title_height"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        android:gravity="center"
        android:background="@color/colorWhite"
        >
        <RadioButton
            android:id="@+id/rb_index"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:button="@null"
            android:drawableBottom="@drawable/rb_bg1"
            android:gravity="center"
            android:paddingBottom="@dimen/margin10"
            />
        <RadioButton
            android:id="@+id/rb_user"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:drawableBottom="@drawable/rb_bg2"
            android:button="@null"
            android:gravity="center"
            android:paddingBottom="@dimen/margin10"
            />
        <RadioButton
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:button="@null"
            android:clickable="false"
            android:paddingBottom="@dimen/margin10"
            />
        <RadioButton
            android:id="@+id/rb_message"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:drawableBottom="@drawable/rb_bg3"
            android:button="@null"
            android:gravity="center"
            android:paddingBottom="@dimen/margin10"
            />
        <RadioButton
            android:id="@+id/rb_mine"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:drawableBottom="@drawable/rb_bg4"
            android:button="@null"
            android:gravity="center"
            android:paddingBottom="@dimen/margin10"
            />
    </RadioGroup>
    <ImageView
        android:id="@+id/iv_publish"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/title_height"
        android:layout_centerHorizontal="true"
        android:src="@drawable/home_publish_pressed"
        android:scaleType="fitCenter"
        android:layout_alignParentBottom="true"
        />
</RelativeLayout>
