<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.example.admin.bolojie.fragment.NewFragment"
    >
    <android.support.v4.view.ViewPager
        android:id="@+id/top_page"
        android:layout_width="match_parent"
        android:layout_height="@dimen/pager_height"
        >
    </android.support.v4.view.ViewPager>
    <com.example.admin.bolojie.view.PageIndexView
        android:id="@+id/page_index"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/title_height"
        android:layout_centerHorizontal="true"
        app:view_defaultColor="@color/colorWhite"
        app:view_selectedColor="@color/colorAccent"
        android:layout_alignBottom="@+id/top_page"
        />
    <android.support.v7.widget.RecyclerView
        android:id="@+id/new_recycle"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/top_page"
        >
    </android.support.v7.widget.RecyclerView>
</RelativeLayout>
