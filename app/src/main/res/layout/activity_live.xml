<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.activity.LiveActivity">
    <ImageView
        android:id="@+id/iv_heart"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:src="@drawable/heart"
        />
    <com.view.HeartLayout
        android:id="@+id/ly_ht"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_margin="10dp"
        />
    <ImageView
        android:id="@+id/iv_gift"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/ic_live_gift"
        android:scaleType="fitXY"
        android:layout_margin="10dp"
        android:layout_alignParentBottom="true"
        android:clickable="true"
        />
    <Button
        android:id="@+id/anmi_start"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="start"
        android:layout_margin="10dp"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@id/iv_gift"
        />
    <Button
        android:id="@+id/anmi_end"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="end"
        android:layout_margin="10dp"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@+id/anmi_start"
        />
</RelativeLayout>
